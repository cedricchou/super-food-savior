<%- include('../partials/header') %>

<div class="container">
  <form action="/donations" method="post" encType="multipart/form-data">

    <label>Title</label>
    <input type="text" name="title" class="form-control" placeholder="e.g. Carrots, cauliflower, etc..."/>

    <label>Description</label>
    <textarea type="text" name="description" class="form-control" rows="6"></textarea>

    <br />

    <label>Attach picture</label>
    <input type="file" name="donationPic" />

    <div class="btn-group float-right mt-2">
      <button type="submit" class="btn btn-primary mr">Submit</button>
    </div>
  </form>
</div>

<%- include('../partials/footer') %>
