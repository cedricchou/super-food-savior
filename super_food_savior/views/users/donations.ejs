<%- include('../partials/header') %>

<h1>Welcome to the donation board</h1>

<div class="row">
  <% for (let i = myDonations.length-1; i >= 0; i-- ) { %>
    <div class="card col-lg-6">
      <div class="card-body">
      <div class="card-title"><%= myDonations[i].title %></div>
      <p class="card-text"><%= myDonations[i].description %></p>
      </div>
      <form
        action="/users/<%= myDonations[i].user_id %>/donations/<%= myDonations[i].id %>/messages"
        method="get">
        <input type="submit" value="see messages" />
      </form>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
